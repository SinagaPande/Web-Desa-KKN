---
// Menggunakan motif logo yang lebih variatif agar tidak monoton
const logos = [
    "/Imagery/lampung_logo_1.webp",
    "/Imagery/lampung_logo_2.webp",
    "/Imagery/lampung_logo_3.webp"
];

// Repetisi diperbanyak
const repeatedLogos = [...logos, ...logos, ...logos, ...logos]; 
---

<div class="flex flex-row items-center gap-2 md:gap-6 opacity-80 w-full overflow-hidden">
    {repeatedLogos.map((src) => (
        <img 
            src={src} 
            alt="Motif Lampung" 
            class="h-10 md:h-16 lg:h-20 w-auto object-contain flex-shrink-0 drop-shadow-md grayscale-[30%] hover:grayscale-0 transition-all"
        />
    ))}
</div>