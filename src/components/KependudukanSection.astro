---
// src/components/KependudukanSection.astro
---

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">

<section class="bg-lampung-bone py-16 px-4 md:pt-24 md:pb-12 border-b border-[#2d2520]/10 font-inter">
    
    <div class="max-w-4xl mx-auto bg-white rounded-2xl shadow-xl border border-[#eaddcf] p-6 md:p-10 relative overflow-hidden">
      
      <div class="absolute top-0 left-0 w-full h-2 bg-gradient-to-r from-lampung-gold via-lampung-dark to-lampung-gold"></div>

      <div class="text-center mb-10 mt-4">
        <h2 class="text-xl md:text-3xl text-stone-800 font-extrabold uppercase tracking-widest mb-6 inline-block">
          DATA KEPENDUDUKAN DESA
        </h2>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
        <div class="bg-[#f7f5f0] p-8 rounded-xl border border-lampung-gold/20 text-center hover:shadow-lg transition-shadow">
          <div class="text-base font-bold text-lampung-dark mb-2 uppercase tracking-wide">Total Penduduk Desa</div>
          <div class="text-5xl md:text-6xl font-extrabold text-[#333] mb-1">1.714</div>
          <div class="text-sm text-stone-500 font-bold uppercase tracking-widest">Jiwa</div>
        </div>
        <div class="bg-[#f7f5f0] p-8 rounded-xl border border-lampung-gold/20 text-center hover:shadow-lg transition-shadow">
          <div class="text-base font-bold text-lampung-dark mb-2 uppercase tracking-wide">Kepala Keluarga</div>
          <div class="text-5xl md:text-6xl font-extrabold text-[#333] mb-1">542</div>
          <div class="text-sm text-stone-500 font-bold uppercase tracking-widest">KK</div>
        </div>
      </div>

    <div class="mb-12 space-y-8"> 
        <div class="flex items-center">
          <div class="flex justify-center items-center mr-8 shrink-0 w-8">
            <img src="/Imagery/Male.webp" alt="Laki-laki" class="w-6 h-auto block" />
          </div>
          
          <div class="flex-grow h-10 md:h-12 flex items-center border-l-4 border-gray-200 relative bg-gray-50 rounded-r-lg overflow-hidden">
            <div class="h-full flex items-center justify-end px-4 text-white font-bold text-lg bg-[#34b4f6]" style="width: 84.6%;">
              846
            </div>
            <span class="absolute left-3 text-white/90 text-xs md:text-sm font-bold uppercase tracking-wider z-10 shadow-sm">Laki-laki</span>
          </div>
        </div>

        <div class="flex items-center">
          <div class="flex justify-center items-center mr-8 shrink-0 w-8">
            <img src="/Imagery/Female Logo.webp" alt="Perempuan" class="w-6 h-auto block" />
          </div>

          <div class="flex-grow h-10 md:h-12 flex items-center border-l-4 border-gray-200 relative bg-gray-50 rounded-r-lg overflow-hidden">
            <div class="h-full flex items-center justify-end px-4 text-white font-bold text-lg bg-[#fc0376]" style="width: 86.8%;">
              868
            </div>
            <span class="absolute left-3 text-white/90 text-xs md:text-sm font-bold uppercase tracking-wider z-10 shadow-sm">Perempuan</span>
          </div>
        </div>
      </div>

      <hr class="border-t border-dashed border-stone-300 mb-12" />
    
      <div class="grid grid-cols-3 gap-3 md:gap-8 items-end">
        
        <div class="flex flex-col items-center group">
          <div class="h-60 md:h-72 w-full flex justify-center items-end gap-2 border-b-2 border-stone-800 pb-2 mb-4">
            <div class="w-8 md:w-12 bg-[#34b4f6] rounded-t-md relative flex justify-center group-hover:brightness-110 transition-all" style="height: 20.5%;">
              <span class="absolute -top-6 text-xs md:text-sm font-bold text-stone-700">87</span>
            </div>
            <div class="w-8 md:w-12 bg-[#fc0376] rounded-t-md relative flex justify-center group-hover:brightness-110 transition-all" style="height: 22.2%;">
              <span class="absolute -top-6 text-xs md:text-sm font-bold text-stone-700">94</span>
            </div>
          </div>
          
          <h3 class="text-base md:text-xl font-bold text-lampung-dark mb-3 uppercase tracking-widest text-center">Dusun 1</h3>
          
          <div class="w-full bg-[#f7f5f0] border border-[#eaddcf] rounded-xl p-3 md:p-5 text-center shadow-sm">
            <div class="mb-3">
              <div class="text-[10px] md:text-xs uppercase text-stone-500 font-bold tracking-wider mb-1">Total</div>
              <div class="text-2xl md:text-3xl font-extrabold text-[#333]">181</div>
            </div>
            <div class="w-1/2 mx-auto h-px bg-stone-300 mb-3"></div>
            <div>
              <div class="text-[10px] md:text-xs uppercase text-stone-500 font-bold tracking-wider mb-1">KK</div>
              <div class="text-lg md:text-xl font-bold text-stone-600">55</div>
          </div>
          </div>
        </div>

        <div class="flex flex-col items-center group">
          <div class="h-60 md:h-72 w-full flex justify-center items-end gap-2 border-b-2 border-stone-800 pb-2 mb-4">
            <div class="w-8 md:w-12 bg-[#34b4f6] rounded-t-md relative flex justify-center group-hover:brightness-110 transition-all" style="height: 79.4%;">
              <span class="absolute -top-6 text-xs md:text-sm font-bold text-stone-700">336</span>
            </div>
            <div class="w-8 md:w-12 bg-[#fc0376] rounded-t-md relative flex justify-center group-hover:brightness-110 transition-all" style="height: 87.4%;">
              <span class="absolute -top-6 text-xs md:text-sm font-bold text-stone-700">370</span>
            </div>
          </div>
          
          <h3 class="text-base md:text-xl font-bold text-lampung-dark mb-3 uppercase tracking-widest text-center">Dusun 2</h3>
          
          <div class="w-full bg-[#f7f5f0] border border-[#eaddcf] rounded-xl p-3 md:p-5 text-center shadow-sm">
            <div class="mb-3">
              <div class="text-[10px] md:text-xs uppercase text-stone-500 font-bold tracking-wider mb-1">Total</div>
              <div class="text-2xl md:text-3xl font-extrabold text-[#333]">706</div>
            </div>
            <div class="w-1/2 mx-auto h-px bg-stone-300 mb-3"></div>
            <div>
              <div class="text-[10px] md:text-xs uppercase text-stone-500 font-bold tracking-wider mb-1">KK</div>
              <div class="text-lg md:text-xl font-bold text-stone-600">223</div>
            </div>
          </div>
        </div>

       <div class="flex flex-col items-center group">
          <div class="h-60 md:h-72 w-full flex justify-center items-end gap-2 border-b-2 border-stone-800 pb-2 mb-4">
            <div class="w-8 md:w-12 bg-[#34b4f6] rounded-t-md relative flex justify-center group-hover:brightness-110 transition-all" style="height: 100%;">
              <span class="absolute -top-6 text-xs md:text-sm font-bold text-stone-700">423</span>
            </div>
            <div class="w-8 md:w-12 bg-[#fc0376] rounded-t-md relative flex justify-center group-hover:brightness-110 transition-all" style="height: 95.5%;">
              <span class="absolute -top-6 text-xs md:text-sm font-bold text-stone-700">404</span>
            </div>
          </div>
          
          <h3 class="text-base md:text-xl font-bold text-lampung-dark mb-3 uppercase tracking-widest text-center">Dusun 3</h3>
          
          <div class="w-full bg-[#f7f5f0] border border-[#eaddcf] rounded-xl p-3 md:p-5 text-center shadow-sm">
            <div class="mb-3">
              <div class="text-[10px] md:text-xs uppercase text-stone-500 font-bold tracking-wider mb-1">Total</div>
              <div class="text-2xl md:text-3xl font-extrabold text-[#333]">827</div>
            </div>
            <div class="w-1/2 mx-auto h-px bg-stone-300 mb-3"></div>
            <div>
              <div class="text-[10px] md:text-xs uppercase text-stone-500 font-bold tracking-wider mb-1">KK</div>
              <div class="text-lg md:text-xl font-bold text-stone-600">264</div>
            </div>
          </div>
        </div>

      </div>
      
      <div class="mt-12 text-center">
        <p class="text-xs text-stone-400 italic font-medium">*Data Tahun 2023</p>
      </div>

    </div>
</section>

<style>
  /* Menerapkan font Inter ke seluruh section ini */
  .font-inter {
    font-family: 'Inter', sans-serif;
  }
</style>