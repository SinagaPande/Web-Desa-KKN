<div id="lightbox" class="lightbox">
    <div class="lightbox-wrapper">
        <img id="lightbox-img" class="lightbox-content" src="" alt="View">
        <div id="lightbox-caption" class="lightbox-caption"></div>
    </div>
</div>

<style>
    /* --- LIGHTBOX CSS BASE --- */
    .lightbox {
        display: none;
        position: fixed; z-index: 9999;
        left: 0; top: 0; width: 100%; 
        height: 100dvh; /* Dynamic Height untuk Mobile Browser */
        background-color: rgba(30, 41, 59, 0.95);
        backdrop-filter: blur(8px);
        display: flex;
        flex-direction: column;
        justify-content: center; align-items: center;
        padding: 30px;
        opacity: 0; pointer-events: none;
        transition: opacity 0.3s ease-out;
    }

    .lightbox:not(.active) { display: none; }
    .lightbox.active { display: flex; opacity: 1; pointer-events: auto; }

    .lightbox-wrapper {
        display: flex; flex-direction: column;
        align-items: center; justify-content: center;
        max-height: 100%; 
        max-width: 100%;
        position: relative;
    }
    
    .lightbox-content {
        /* Default Desktop: 75% layar */
        max-height: 75vh; 
        max-width: 90%; width: auto;
        border: 4px solid #fff; border-radius: 8px;
        box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
        object-fit: contain;
    }
    
    .lightbox-caption {
        margin-top: 20px; color: #fff; 
        text-align: center; width: 100%; max-width: 800px;
        display: flex; flex-direction: column; align-items: center; gap: 10px;
    }

    /* Styles untuk Teks Nama & Jabatan */
    :global(.lb-name) {
        font-family: 'Segoe UI', sans-serif; font-weight: 900; color: #ffffff;
        text-shadow: 0 2px 10px rgba(0,0,0,0.5); 
        text-transform: uppercase; line-height: 1.2; letter-spacing: 1px; text-align: center;
    }

    :global(.lb-role) {
        font-weight: 700; text-transform: uppercase; letter-spacing: 2px;
        text-align: center; margin-top: 5px;
    }

    /* --- RESPONSIVE BREAKPOINTS --- */

    /* Tablet */
    @media (max-width: 1024px) {
        .lightbox-content { max-height: 60vh; } 
        :global(.lb-name) { font-size: 2rem; }
        :global(.lb-role) { 
            font-size: 1rem; color: #fca5a5;
            background: rgba(255,255,255,0.1); padding: 8px 16px; border-radius: 20px;
        }
    }

    /* --- MOBILE PHONE FIX (Perbaikan Utama) --- */
    @media (max-width: 640px) {
        .lightbox { 
            padding: 10px; /* Padding tepi layar lebih tipis */
        }
        
        .lightbox-wrapper {
            width: 100%;
            height: 100%;
            justify-content: center;
        }

        .lightbox-content {
            /* HARD LIMIT: Gambar maksimal hanya boleh 55% dari tinggi layar */
            /* Ini akan memaksa gambar resolusi tinggi mengecil */
            max-height: 55vh !important; 
            
            width: auto;
            max-width: 100%;
            object-fit: contain;
            
            border-width: 3px;
            box-shadow: 0 10px 20px rgba(0,0,0,0.5);
        }

        .lightbox-caption {
            /* Paksa caption naik mendekati foto */
            margin-top: 15px; 
            gap: 8px;
            flex-shrink: 0; /* Pastikan caption tidak tergencet */
        }
        
        :global(.lb-name) { 
            font-size: 1.4rem; /* Ukuran font pas */
            word-break: break-word; 
            padding: 0 10px;
        }
        :global(.lb-role) { 
            font-size: 0.85rem; 
            padding: 6px 15px; 
            border: 1px solid rgba(255,255,255,0.3);
            background: rgba(0,0,0,0.3);
            border-radius: 50px;
        }
    }

    /* Landscape HP */
    @media (max-height: 500px) and (orientation: landscape) {
        .lightbox-wrapper { flex-direction: row; gap: 15px; }
        .lightbox-content { max-height: 85vh !important; max-width: 45%; }
        .lightbox-caption { align-items: flex-start; text-align: left; margin-top: 0; }
        :global(.lb-name) { text-align: left; font-size: 1.2rem; }
    }

    :global(body.no-scroll) { overflow: hidden; }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const lightbox = document.getElementById('lightbox');
        const lightboxImg = document.getElementById('lightbox-img') as HTMLImageElement;
        const lightboxCaption = document.getElementById('lightbox-caption');
        
        const profileImages = document.querySelectorAll('.profile-img');

        profileImages.forEach(img => {
            img.addEventListener('click', function(e) {
                e.stopPropagation(); 
                // @ts-ignore
                const src = this.src;
                // @ts-ignore
                const rawText = this.getAttribute('data-name'); 

                if (lightboxImg) lightboxImg.src = src;
                
                const parts = rawText ? rawText.split(' - ') : ['Unknown', ''];
                if (lightboxCaption) {
                    lightboxCaption.innerHTML = `
                        <span class="lb-name">${parts[0]}</span>
                        <span class="lb-role">${parts[1] || ''}</span>
                    `;
                }
                
                if (lightbox) lightbox.classList.add('active');
                document.body.classList.add('no-scroll');
            });
        });

        if (lightbox) {
            lightbox.addEventListener('click', function() {
                lightbox.classList.remove('active');
                document.body.classList.remove('no-scroll');
            });
        }
    });
</script>