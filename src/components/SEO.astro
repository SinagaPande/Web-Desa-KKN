---
// src/components/SEO.astro
interface Props {
  title?: string;
  description?: string;
  keywords?: string;
  image?: string;
  pageType?: "website" | "article";
}

// Mengambil URL situs dari konfigurasi atau fallback ke domain Vercel
const siteUrl = Astro.site ? Astro.site.href : "https://sukadanailir.vercel.app";

const {
  // Judul Default yang mengandung hierarki wilayah (Penting untuk SEO Lokal)
  title = "Desa Sukadana Ilir • Kecamatan Bunga Mayang • Lampung Utara",
  
  // Deskripsi yang memuat potensi utama desa
  description = "Website Resmi Pemerintah Desa Sukadana Ilir, Kecamatan Bunga Mayang, Kabupaten Lampung Utara. Informasi pelayanan publik, transparansi dana desa, dan potensi pertanian (Sawit, Karet, Tebu, Padi).",
  
  // Kata kunci target + variasi penulisan
  keywords = "Desa Sukadana Ilir, Sukadana Ilir, Bunga Mayang, Lampung Utara, Kotabumi, website desa, profil desa, dana desa, pertanian lampung, tebu, sawit, karet, padi",
  
  // Gambar default untuk share link (menggunakan logo daerah/siger)
  image = "/Imagery/Logo_LampungUtara.webp", 
  pageType = "website"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, siteUrl);
const imageURL = new URL(image, siteUrl);
---

<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<meta name="generator" content={Astro.generator} />

<link rel="icon" type="image/png" href="/Imagery/favicon/favicon_siger.png" />

<meta name="google-site-verification" content="google2afd5e3615fe4545" />

<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<meta name="keywords" content={keywords} />
<link rel="canonical" href={canonicalURL} />

<meta property="og:type" content={pageType} />
<meta property="og:url" content={canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={imageURL} />

<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={imageURL} />

<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "GovernmentOrganization",
  "name": "Pemerintah Desa Sukadana Ilir",
  "alternateName": "Kantor Desa Sukadana Ilir",
  "url": siteUrl,
  "logo": imageURL,
  "image": new URL("/Imagery/favicon/favicon_siger.png", siteUrl),
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Jl. Poros Desa Sukadana Ilir", // Ganti jika ada nama jalan spesifik
    "addressLocality": "Kecamatan Bunga Mayang",
    "addressRegion": "Kabupaten Lampung Utara",
    "postalCode": "34554", // Kode Pos Bunga Mayang
    "addressCountry": "ID"
  },
  "geo": {
    "@type": "GeoCoordinates",
    // Koordinat umum area Bunga Mayang/Sukadana Ilir
    "latitude": "-4.5565", 
    "longitude": "104.7386" 
  },
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+62 821-1659-8972", // Ganti dengan No HP Pelayanan/Kades jika ada (opsional)
    "contactType": "public service",
    "areaServed": "ID",
    "availableLanguage": "Indonesian"
  },
  "sameAs": [
  ],
  "description": description
})} />