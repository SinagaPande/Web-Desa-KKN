---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="id" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Website Resmi Desa Sukadana Ilir" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Playfair+Display:wght@400;600;700;900&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-lampung-dark text-lampung-bone font-serif overflow-x-hidden">
		<slot />
	</body>
</html>

<style is:global>
	/* Reset dasar untuk memastikan background penuh */
	html, body {
		margin: 0;
		padding: 0;
		min-height: 100%;
	}
</style>